{
  "name": "study-tokens",
  "version": "1.1.0",
  "description": "Gagne des tokens en √©tudiant üè•",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.studytokens.app",
    "productName": "StudyTokens",
    "publish": {
      "provider": "github",
      "owner": "Mickado-Makoto",
      "repo": "StudyTokens"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "runAfterFinish": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
